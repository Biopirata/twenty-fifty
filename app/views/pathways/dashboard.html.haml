%script{ :type => 'text/javascript' }
  twentyfifty.setup(twentyfifty.Dashboard2)
#container
  %h1#pageheading DECC 2050 Calculator
  #subheading Use the Energy controls to get emissions below the 2050 target whilst balancing supply and demand, and keeping an eye on cost. Use the quick start menu to try things out fast.
  #main
    #visuals
      #costsvisual
        #emissionsheading EMISSIONS METER
        / Visualisation of the costs bars
        #emissionsovertimebar.costbar
          #emissionscurrent Currently 50&#037;
          #emissionspast &lt;&lt; 1990 levels
      #supply_demand
        #supplycontainer
          #supplylegend.legend YOUR ENERGY SUPPLY
          #supplygrid.grid
            / supply grid
        #middle
          #middlelegend.legend YOUR ENERGY FLOW
          #costmessage
          #connection
            / Place for the connection drawing
          #implications
            /
              Basically a graphic to pop out the
              implications window
            %a#iframe{:href => '#'} Implications
        #demandcontainer
          #demandlegend.legend YOUR ENERGY DEMAND
          #demandgrid.grid
            / Put your grid in here
      #calculating 
        #calcmessage Calculating
  .clear
  = render 'homepage_menu'
  #controls
    = render 'classic_controls'
    .clear
    / Top Level controls for changing the pathway.
  #footer

:javascript
  $(document).ready(function(){
    function openFancyBox() {
      $.fancybox({
        'href' : twentyfifty.popup_url(),
        'type': 'iframe',
        'hideOnContentClick' : false,
        'width' : '98%',
        'height' : '98%',
        'padding': 0,
        'overlayColor':'#000000',
        'overlayOpacity':'0.8'
      })
    }
    
    $("a#iframe").bind('click',openFancyBox);
    
  })
